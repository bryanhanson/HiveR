			if (i != nrow(df)) { #
				if (df[i+1,6] == 2) {#
					if (Verbose == 3) message("Looking AHEAD for embedded functions & skipping them")#
					if (df[i+1,3] != df[i,3]) stop("Looking in different files - something is wrong!")#
					fileNo <- df[i,3] #
					keep <- c(NA_integer_) #
