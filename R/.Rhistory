					fileNo <- df[i,3]#
					lineNo <- df[i,4]:df[i,5]#
					callMat <- searchLines(fL = fL, df = df, i = i, fNo = fileNo, lNo = lineNo,#
						cMat = callMat, exFnNode = exFnNode, addFnCall = addFnCall,#
						exFnCall = exFnCall, Verbose = Verbose)#
					}#
			} #
		} #
		if (df[i,6] == 2) { #
			fileNo <- df[i,3]#
			lineNo <- df[i,4]:df[i,5]#
			callMat <- searchLines(fL = fL, df = df, i = i, fNo = fileNo, lNo = lineNo,#
				cMat = callMat, exFnNode = exFnNode, addFnCall = addFnCall,#
				exFnCall = exFnCall, Verbose = Verbose)#
			}		#
		} #
	return(callMat)#
	} #
